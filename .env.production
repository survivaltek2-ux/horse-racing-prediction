# Production Environment Configuration
# Horse Racing Prediction System

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-change-this
DEBUG=False

# Database Configuration
# For PostgreSQL: postgresql://username:password@host:port/database
# For MySQL: mysql://username:password@host:port/database
# Leave empty to use SQLite for testing
DATABASE_URL=
DATABASE_ECHO=False

# API Configuration
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RATE_LIMIT_PER_MINUTE=60
DEFAULT_API_PROVIDER=mock

# API Keys (Set these for production)
SAMPLE_API_KEY=
ODDS_API_API_KEY=
RAPID_API_API_KEY=
THERACINGAPI_USERNAME=
THERACINGAPI_PASSWORD=

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/production.log

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=4

# SSL Configuration (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30