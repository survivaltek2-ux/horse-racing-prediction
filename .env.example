# Horse Racing Prediction System - Environment Configuration
# Copy this file to .env and update with your actual API keys

# API Configuration
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RATE_LIMIT_DELAY=1.0
API_CACHE_DURATION=300
API_MAX_RACES=50
API_DEFAULT_DAYS=7

# API Keys (get these from respective providers)
SAMPLE_API_KEY=your_sample_api_key_here
ODDS_API_API_KEY=your_odds_api_key_here
RAPID_API_API_KEY=your_rapidapi_key_here
THERACINGAPI_USERNAME=your_theracingapi_username_here
THERACINGAPI_PASSWORD=your_theracingapi_password_here

# Provider Selection
DEFAULT_API_PROVIDER=mock
FALLBACK_API_PROVIDER=sample

# TheRacingAPI Configuration
# Get your username and password from: https://www.theracingapi.com/#subscribe
# Uses HTTP Basic Authentication (username/password)
# Available plans: Free (limited), Pro, Enterprise
# Features: UK/Ireland/USA racing data, results, odds, form data

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration (if using database instead of JSON)
# DATABASE_URL=sqlite:///horse_racing.db

# Firebase Configuration
# Option 1: Use environment variables (RECOMMENDED for production)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Option 2: Use service account file (for local development only)
# FIREBASE_SERVICE_ACCOUNT_PATH=config/firebase-service-account.json
# Or set GOOGLE_APPLICATION_CREDENTIALS environment variable

# Encryption key for sensitive data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Admin User Configuration (for create_admin_user.py and fix_admin_password.py)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@hrp.com
ADMIN_PASSWORD=your-secure-admin-password-here