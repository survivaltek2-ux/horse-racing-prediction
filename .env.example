# Horse Racing Prediction System - Environment Configuration
# Copy this file to .env and update with your actual API keys

# API Configuration
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RATE_LIMIT_DELAY=1.0
API_CACHE_DURATION=300
API_MAX_RACES=50
API_DEFAULT_DAYS=7

# API Keys (get these from respective providers)
SAMPLE_API_KEY=your_sample_api_key_here
ODDS_API_API_KEY=your_odds_api_key_here
RAPID_API_API_KEY=your_rapidapi_key_here
THERACINGAPI_USERNAME=your_theracingapi_username_here
THERACINGAPI_PASSWORD=your_theracingapi_password_here

# Provider Selection
DEFAULT_API_PROVIDER=mock
FALLBACK_API_PROVIDER=sample

# TheRacingAPI Configuration
# Get your username and password from: https://www.theracingapi.com/#subscribe
# Uses HTTP Basic Authentication (username/password)
# Available plans: Free (limited), Pro, Enterprise
# Features: UK/Ireland/USA racing data, results, odds, form data

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration (if using database instead of JSON)
# DATABASE_URL=sqlite:///horse_racing.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log